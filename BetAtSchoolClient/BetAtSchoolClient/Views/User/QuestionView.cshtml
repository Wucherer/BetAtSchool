@{
    Layout = null;


    int currentQuestion = int.Parse(ViewContext.HttpContext.Session["currentQuestion"] as string);
}

<script>
    function btnNextClick(e)
    {
         $.ajax(
                {
                    type: 'GET',
                    url: '@Url.Action("QuestionView", "User")',
                    success: function (result) {
                        $("#body").html(result);
                    }
                });
    }
</script>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuestionView</title>
</head>
<body>
    <div id="Login-content" class="demo-section k-content">
        @try
        {
        <p class="title">@Model.Questions[currentQuestion].Description</p>
        <ul>
            @for (int i = 0; i < Model.Questions[currentQuestion].Answers.Count; i++)
            {
                <li>@Html.Kendo().CheckBox().Name("answer" + i)&nbsp; &nbsp; &nbsp; &nbsp; @Model.Questions[currentQuestion].Answers[i].Description</li>
            }
        </ul>
        @Html.Kendo().Button().Name("btnNext").Events(e => e.Click("btnNextClick")).Content("Next")
        }
        catch {
            <p>Das Ende, vorerst...</p>
        }

    </div>
</body>


</html>
<style>
   
    ul {
        margin-left: 20%;
        margin-bottom: 20px;
    }

    li {
        font-size: 20px;
        margin-top: 20px;
        list-style-type: none;
    }


    .title {
        text-decoration: underline;
        font-size: 25px;
        color: darkblue;
        margin-left: 10%;
        margin-top: 10%;
    }

    .demo-section {
        padding: 0;

        width: 40%;
        margin-top:5%;
        margin-left:30%;
    }

    #btnStartQuiz {

        margin-top:10px;
    }

    
    #btnNext {
        margin-bottom:10%;
        margin-left:80%;
        width:15%;
    }



    #Login-content .title {
        font-size: 16px;
        color: #fff;
        background-color: #1e88e5;
        padding: 20px 30px;
        margin: 0;
    }

    #fieldlist {
        margin: 0 0 -1.5em;
        padding: 30px;
    }

        #fieldlist li {
            list-style: none;
            padding-bottom: 1.5em;
        }

        #fieldlist label {
            display: block;
            padding-bottom: .6em;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 12px;
            color: #444;
        }
        
</style>